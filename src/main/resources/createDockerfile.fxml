<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.CreateDockerfileController" spacing="10" padding="10">
    <children>
        <Label text="Create Dockerfile"/>
        <Label text="Base Image"/>
        <HBox spacing="5">
            <Label text="Image:"/>
            <TextField fx:id="imageTextField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Tag:"/>
            <TextField fx:id="tagTextField" promptText="latest"/>
        </HBox>
        <Button text="Add FROM" onAction="#onAddFrom"/>

        <!-- Repeat the above pattern for other Dockerfile instructions -->

        <Label text="Instructions"/>
        <ListView fx:id="instructionsListView"/>

        <HBox spacing="5">
            <Button text="Save Dockerfile" onAction="#onSave"/>
            <Button text="Clear" onAction="#onClear"/>
        </HBox>
    </children>
</VBox>
